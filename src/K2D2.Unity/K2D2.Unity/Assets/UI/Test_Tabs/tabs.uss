#tabs {
    flex-direction: row;
    -unity-font-style: bold;
    border-left-color: rgb(76, 79, 188);
    border-right-color: rgb(76, 79, 188);
    border-top-color: rgb(76, 79, 188);
    border-bottom-color: rgb(76, 79, 188);
    border-bottom-width: 2px;
}

.unselectedContent {
    display: none;
}

.tab {
    width: auto;
    height: 30px;
    padding-bottom: 2px;
    border-top-left-radius: 10px;
    border-top-right-radius: 10px;
    overflow: hidden;
    margin-left: 2px;
    margin-right: 2px;
    flex-grow: 0;
    background-color: rgb(22, 22, 22);
    border-color: rgb(51, 51, 51);
    padding-left: 4px;
    padding-right: 4px;
    flex-direction: column;
    justify-content: flex-end;
    min-width: 80px;
    margin-bottom: 0;
    -unity-font-style: normal;
    margin-top: 2px;
}

.tab.current {
    height: 30px;
    align-self: auto;
    justify-content: flex-end;
    padding-bottom: 2px;
    overflow: hidden;
}

.tab > Label {
    color: rgb(136, 152, 159);
    -unity-font-style: bold;
}

.tab.current > Label {
    color: rgb(201, 233, 238);
}

.tab:hover {
    background-color: rgb(40, 40, 41);
}

.tab:active {
    background-color: rgb(57, 0, 255);
}

.tab_light {
    top: -3px;
    right: -19px;
    width: auto;
    height: 10px;
    left: -13px;
    overflow: visible;
    position: absolute;
    border-radius: 7px;
    border-left-width: 0;
    border-right-width: 0;
    border-top-width: 0;
    border-bottom-width: 0;
    flex-grow: 1;
    display: flex;
    opacity: 1;
    border-left-color: rgba(18, 18, 18, 0);
    border-right-color: rgba(18, 18, 18, 0);
    border-top-color: rgba(18, 18, 18, 0);
    border-bottom-color: rgba(18, 18, 18, 0);
    -unity-background-image-tint-color: rgb(18, 18, 18);
}

:root {
    --transition-duration-ligh-bt: 1s;
}

.tab_light.is_running_on {
    background-image: url('project://database/Assets/Images/Light_Button.png?fileID=2800000&guid=778643882f96ecd47990fd5c8764fd03&type=3#Light_Button');
    -unity-background-image-tint-color: rgb(33, 183, 0);
    transition-duration: var(--transition-duration-ligh-bt);
    transition-timing-function: ease-in-out-sine;
}

.tab_light.is_running_on_anim {
    -unity-background-image-tint-color: rgb(32, 250, 0);
    transition-duration: var(--transition-duration-ligh-bt);
    transition-timing-function: ease-in-out-sine;
}

